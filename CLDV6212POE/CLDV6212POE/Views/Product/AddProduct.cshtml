@model CLDV6212POE.Models.Product

<h1>Add Product</h1>

@if (TempData["Message"] != null)
{
    <p style="color:green;">@TempData["Message"]</p>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Product_Name"></label>
        <input asp-for="Product_Name" required />
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" required />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" required /> <!-- matches controller param -->
    </div>
    <button type="submit">Add Product</button>
</form>


