@model IEnumerable<CLDV6212POE.Models.Product>

<h1>Products</h1>

@if (TempData["Message"] != null)
{
    <p style="color:green;">@TempData["Message"]</p>
}

<p>
    <a asp-action="AddProduct">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th> <!-- just plain text works -->
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.Price?.ToString("C")</td> 
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Product_Name" style="width:100px;height:auto" />
                    }
                </td>
                <td>
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />
                        <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

